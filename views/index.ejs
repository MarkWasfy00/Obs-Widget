    <style>
    main {
        background-color: #C4284D;
        border-radius: 1rem;
        padding: 1rem;
        display: flex;
        color: white;
        gap: 2rem;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        position: relative;
        /* left: -200rem; */
        transition: 4s;
        
    }

    .popin {
        animation: 1s popin 1s forwards;
    }

    .popout {
        animation: 1s popout 1s forwards;
    }

    .box1 img {
        /* object-fit: cover; */
        height: 100%;
        /* width: 100%; */
    }

    .box1 {
        /* width: 1500px; */
        height: 400px;
        border: 3px solid white;
    }

    .box2 {
        width: 3000px;
    }

    .box2 .text1 {
        font-family: 'Bungee', sans-serif;
        font-size: 5rem;
        text-transform: uppercase;

    }

    .box2 .text2 {
        font-family: "Engrez W03 Black", sans-serif;
        font-size: 2.5rem;
        margin-top: -2rem;
    }

    @keyframes popin {
        0% {
            left: -200rem;
        }

        100% {
            left: 0;
        }
    }

    @keyframes popout {
        0% {
            left: 0;
        }

        100% {
            left: -200rem;
        }
    }
</style>
    <body>
        <main class="main">
            <div class="box1">
                <img alt="facts" id="img"
                    onerror="this.onerror=null; this.src='https://placehold.co/600x500'"
                    src="../imgs/quote7.jpg" />
            </div>
            <div class="box2">
                <div class="text1">did you know?</div>
                <div class="text2">Script Working...</div>
            </div>
        </main>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.4/gsap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.4/EaselPlugin.min.js"></script>
        <script src="https://cdn.socket.io/4.0.1/socket.io.min.js"></script>
        <script src="/index.js"></script>
